NAME	:= obsidian.a

CC		:= g++
AR		:= ar rcs
CFLAGS	:= -Wall -Wextra -Werror -std=c++23 -MMD -MP
INCLUDES := -Iinclude

SRCDIR	:= src
OBJDIR	:= obj
BINDIR	:= lib

SRCS	:= Vector.cpp \
				 Window.cpp

OBJS	:= $(SRCS:%.cpp=$(OBJDIR)/%.o)

all: $(BINDIR)/$(NAME)

$(BINDIR)/$(NAME): $(OBJS)
	@mkdir -p $(BINDIR)
	$(AR) $@ $^
	@echo "ðŸ–¤ðŸ“¦ Static library forged: $(NAME)"

$(OBJDIR)/%.o: $(SRCDIR)/%.cpp
	@mkdir -p $(OBJDIR)
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@
	@echo "ðŸ› ï¸ðŸ–¤ Compiled: $<"

-include $(OBJS:.o=.d)

clean:
	rm -rf $(OBJDIR)
	@echo "ðŸ§¹ðŸ’€ Cleaned object files"

fclean: clean
	rm -rf $(BINDIR)
	@echo "ðŸ§¹ðŸ–¤ Fully cleaned (lib + obj)"

re: fclean all

.PHONY: all clean fclean re

